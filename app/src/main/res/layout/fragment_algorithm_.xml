<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".algorithm_helper.Algorithm_Fragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/algorithm_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:contentPadding="20dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:id="@+id/card_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/algorithm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Marge Sort"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/algorithm_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/first_slide_desc"
                        android:fontFamily="@font/alef"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


<!--            <thereisnospon.codeview.CodeView-->
<!--                android:id="@+id/algorithm_code_view"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_margin="8dp"-->
<!--                >-->
<!--            </thereisnospon.codeview.CodeView>-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/algorithm_card_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:contentPadding="20dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:id="@+id/card_linear_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/algorithm_process_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Algorithm"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/algorithm_process_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/first_slide_desc"
                        android:fontFamily="@font/alef"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/algorithm_card_description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:contentPadding="20dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:id="@+id/card_linear_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/algorithm_indetail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Marge Sort in Detail"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/algorithm_indetail_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/first_slide_desc"
                        android:fontFamily="@font/alef"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/algorithm_card_bigO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:contentPadding="20dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:id="@+id/card_linear_bigO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/algorithm_performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Performance"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/algorithm_performance_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/first_slide_desc"
                        android:fontFamily="@font/alef"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>