<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".algorithm_helper.Problems_Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:contentPadding="16dp"
                android:layout_margin="4dp">
                
                <LinearLayout
                    android:id="@+id/card_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                    
                    <TextView
                        android:id="@+id/card_text_problem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Problem  1"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/card_problem_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/first_slide_desc"
                        android:fontFamily="@font/alef"
                        android:visibility="gone"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_xml2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:contentPadding="16dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:id="@+id/card_linear_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_text_problem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Problem  2"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        />

                    <TextView
                        android:id="@+id/card_problem_des2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/second_slide_desc"
                        android:fontFamily="@font/alef"
                        android:visibility="gone"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>