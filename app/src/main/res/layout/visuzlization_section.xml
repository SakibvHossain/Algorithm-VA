<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="8dp"
    android:background="@drawable/handler_stroke_background"
    android:contentDescription="@string/visualization"
    android:fillViewport="true"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/handler_stroke_background">

            <ImageView
                android:id="@+id/selection_arr_1"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="140dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/array_1xxxhdpi" />

            <ImageView
                android:id="@+id/selection_arr_2"
                android:layout_width="32dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/array_2xxxhdpi" />

            <ImageView
                android:id="@+id/selection_arr_3"
                android:layout_width="32dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="260dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/array_3xxxhdpi" />

            <ImageView
                android:id="@+id/selection_arr_4"
                android:layout_width="32dp"
                android:layout_height="128dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/array_4xxxhdpi" />

            <ImageView
                android:id="@+id/selection_arr_5"
                android:layout_width="32dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="200dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/array_5xxxhdpi" />

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>